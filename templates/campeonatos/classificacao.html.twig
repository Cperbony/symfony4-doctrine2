{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="display-3">Classificação {{ campeonato.nome }}</h1>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th></th>
            <th>Time</th>
            <th>Gols Pró</th>
            <th>Gols Sofridos</th>
            <th>Saldo</th>
            <th>Pontos</th>
        </tr>
        </thead>
        <tbody>
        {% for posicao in classificacao %}
            <tr>
                <td><img width="50" src="/uploads/times/escudos " alt="">{{ posicao.time_brasao }}</td>
                <td>{{ posicao.time_nome }}</td>
                <td>{{ posicao.gols_pro }}</td>
                <td>{{ posicao.gols_sofridos }}</td>
                <td>{{ posicao.gols_saldo }}</td>
                <td>{{ posicao.pontos }}</td>
            </tr>
        {%  else %}
            <tr>
                <td colspan="3">Ops. Nenhum Resultado!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block title %}
Classificação - Campeonato {{ campeonato.nome }}
{% endblock %}

